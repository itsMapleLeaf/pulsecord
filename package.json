{
  "name": "pulsecord",
  "version": "0.0.0",
  "description": "send output from pulseaudio through a discord bot",
  "keywords": [],
  "author": "itsMapleLeaf",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec esmo --enable-source-maps --no-warnings src/main.tsx",
    "start": "esmo --enable-source-maps --no-warnings src/main.tsx",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "test": "ava"
  },
  "resolutions": {
    "esbuild": "latest"
  },
  "dependencies": {
    "@discordjs/voice": "^0.7.5",
    "@types/react": "^17.0.37",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "esbuild": "latest",
    "env-paths": "^3.0.0",
    "esbuild": "latest",
    "esmo": "^0.13.0",
    "execa": "^6.0.0",
    "ink": "^3.2.0",
    "ink-select-input": "^4.2.1",
    "libsodium-wrappers": "^0.7.9",
    "mobx": "^6.3.8",
    "mobx-react-lite": "^3.2.2",
    "opusscript": "^0.0.8",
    "pulseaudio.js": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "ava": "^4.0.0-rc.1",
    "esbuild-node-loader": "^0.6.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "rules": {
      "unicorn/consistent-function-scoping": "off"
    },
    "ignorePatterns": [
      "**/node_modules/**",
      "**/patches/**"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=esbuild-node-loader",
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ],
    "files": [
      "src/**/*.test.{ts,tsx}"
    ]
  }
}
