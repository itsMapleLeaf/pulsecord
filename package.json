{
  "name": "pulsecord",
  "version": "0.0.0",
  "description": "send output from pulseaudio through a discord bot",
  "keywords": [],
  "author": "itsMapleLeaf",
  "license": "MIT",
  "type": "module",
  "main": "./dist/main.js",
  "bin": "./dist/main.js",
  "scripts": {
    "build": "tsup-node src/main.tsx",
    "start": "pnpm run build && node .",
    "dev": "run-p dev:*",
    "dev:tsup": "tsup-node src/main.tsx --watch",
    "dev:nodemon": "nodemon .",
    "lint": "eslint --ext js,ts,tsx .",
    "format": "prettier --write .",
    "test": "ava",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "target": "node16",
    "format": [
      "esm"
    ],
    "sourcemap": true
  },
  "dependencies": {
    "@discordjs/voice": "^0.9.0",
    "@types/react": "^18.0.9",
    "discord.js": "^13.7.0",
    "dotenv": "^16.0.1",
    "env-paths": "^3.0.0",
    "esbuild": "latest",
    "execa": "^6.1.0",
    "ink": "^3.2.0",
    "ink-select-input": "^4.2.1",
    "ink-text-input": "^4.0.3",
    "libsodium-wrappers": "^0.7.10",
    "mobx": "^6.5.0",
    "mobx-react-lite": "^3.4.0",
    "opusscript": "^0.0.8",
    "pulseaudio.js": "^1.3.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.3",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "ava": "^4.2.0",
    "chokidar-cli": "^3.0.0",
    "esbuild-node-loader": "^0.8.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "tsup": "^5.12.7",
    "typescript": "^4.6.4"
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "rules": {
      "no-console": "error"
    },
    "ignorePatterns": [
      "**/node_modules/**",
      "**/patches/**"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=esbuild-node-loader",
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ],
    "files": [
      "src/**/*.test.{ts,tsx}"
    ]
  }
}
